<html lang="en">
    <%- include("../shared/header.ejs") %>
    <body>
        <%- include("../shared/navigation.ejs") %>
        <div class="row">
            <div class="col-md-12">
                <h2><%= title %> | <%= action %></h2>
            </div>
        </div>
        <hr />
        <%- include("../shared/message.ejs") %>
        <%- include("../shared/validationErrors.ejs") %>
        <div class="edit-category content">
            <form action="/categories/<%= category._id %>?_method=PUT" method="POST">
                <input type="hidden" name="_id" value="<%= category._id %>">
                <label for="title">name:</label>
                <input type="text" id="name" name="name" value="<%= category.name %>" >
                <label for="description">description:</label>
                <textarea id="description" name="description"><%= category.description %></textarea>
                <button class="btn btn-warning">Update</button>
            </form>
        </div>
        <%- include("../shared/footer.ejs") %>
    </body>
</html>