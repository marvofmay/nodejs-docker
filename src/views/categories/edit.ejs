<html lang="en">
    <%- include("../shared/header.ejs") %>
    <body>
        <%- include("../shared/navigation.ejs") %>
        <div class="row">
            <div class="col-md-12 d-flex justify-content-between align-items-center">
                <h2><%= title %> | <%= action %></h2>
                <button class="btn btn-secondary btn-back">back</button>
            </div>
        </div>
        <hr />
        <%- include("../shared/message.ejs") %>
        <%- include("../shared/validationErrors.ejs") %>
        <div class="edit-category content">
            <div class="row">
                <div class="col-12">
                    <form action="/categories/<%= category._id %>?_method=PUT" method="POST">
                        <input type="hidden" name="_id" value="<%= category._id %>">

                        <label for="name" class="form-label">Name:</label>
                        <input type="text" class="form-control mb-3" name="name" id="name" value="<%= category.name %>">

                        <label for="description" class="form-label">Description:</label>
                        <textarea id="description" class="form-control mb-3" name="description"><%= category.description %></textarea>

                        <button class="btn btn-warning">Update</button>
                    </form>
                </div>
            </div>
        </div>
        <%- include("../shared/footer.ejs") %>
    </body>
</html>