<div class="row">
    <div class="col-md-12 d-flex justify-content-between align-items-center">
        <h2><%= title %> | <%= action %></h2>
        <button class="btn btn-secondary btn-back">back</button>
    </div>
</div>
<hr />
<div class="info-category content" id="info-category-content">
    <div class="row">
        <div class="col-12">
            <div class="text-end">
                <a
                    id="btn-pdf-category"
                    class="btn-pdf-category"
                    href="/categories/pdf/<%= category._id %>"
                    <% if (category.deletedAt !== null) { %> style="display: none;" <% } %>
                >
                    <i class="bi bi-file-pdf"></i>
                </a>
                <a
                    id="btn-edit-category"
                    class="btn-edit-category"
                    href="/categories/edit/<%= category._id %>"
                    <% if (category.deletedAt !== null) { %> style="display: none;" <% } %>
                >
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a
                   id="btn-delete-category"
                   class="btn-delete btn-delete-category"
                   data-category-id="<%= category._id %>"
                   data-category-name="<%= category.name %>"
                   <% if (category.deletedAt !== null) { %> style="display: none;" <% } %>
                >
                    <i class="bi bi-trash3-fill"></i>
                </a>
                <a
                   id="btn-restore-category"
                   class="btn-restore btn-restore-category"
                   data-category-id="<%= category._id %>"
                   data-category-name="<%= category.name %>"
                   <% if (category.deletedAt === null) { %> style="display: none;" <% } %>
                >
                    <i class="bi bi-arrow-counterclockwise"></i>
                </a>
            </div>
        </div>
    </div>
    <div id="category-content" class="content category-content" <% if (category.deletedAt !== null) { %> style="display: none;" <% } %> >
        <h2><%= category.name %></h2>
        <%= category.description %>
    </div>
</div>
