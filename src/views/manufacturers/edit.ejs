<html lang="en">
    <%- include("../shared/header.ejs") %>
    <body>
        <%- include("../shared/navigation.ejs") %>
        <div class="edit-manufacturer content">
            <div class="row">
                <div class="col-md-12 d-flex justify-content-between align-items-center">
                    <h2><%= title %> | <%= action %></h2>
                    <button class="btn btn-secondary btn-back">back</button>
                </div>
            </div>
            <hr />
            <%- include("../shared/message.ejs") %>
            <%- include("../shared/validationErrors.ejs") %>
            <div class="content">
                <form id="manufacturer-edit-form" class="editForm" action="/manufacturers/<%= manufacturer._id %>?_method=PUT" method="POST">
                    <input type="hidden" name="_id" value="<%= manufacturer._id %>">
                    <div class="row">
                        <div class="col-6">
                            <div class="row mb-3">
                                <label for="name" class="col-sm-3 col-form-label">name</label>
                                <div class="col-sm-9">
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="name"
                                        name="name"
                                        value="<%= manufacturer.name %>"
                                    >
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="short-name" class="col-sm-3 col-form-label">short name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="short-name" name="shortName" value="<%= manufacturer.shortName %>">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="nip" class="col-sm-3 col-form-label">NIP</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="nip" name="nip" value="<%= manufacturer.nip %>">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="regon" class="col-sm-3 col-form-label">REGON</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="regon" name="regon" value="<%= manufacturer.regon %>">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="parentManufacturer" class="col-sm-3 col-form-label">parent manufacturer</label>
                                <div class="col-sm-9">
                                    <select class="form-select mb-3" id="parentManufacturer" name="parentManufacturer">
                                        <option></option>
                                        <% manufacturers.forEach(parent => { %>
                                            <option
                                                value="<%= parent._id %>"
                                                <% if (manufacturer.parentManufacturer?.toString() === parent._id.toString()) { %> selected="selected" <% } %>
                                            ><%= parent.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row mb-3">
                                <label for="email" class="col-sm-3 col-form-label">email</label>
                                <div class="col-sm-9">
                                    <input type="email" class="form-control" id="email" name="email" value="<%= manufacturer.email %>">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="www" class="col-sm-3 col-form-label">www</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="www" name="www" value="<%= manufacturer.www %>">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row col-12">
                        <hr />
                        <div class="col-4">
                            <label for="street" class="form-label">Address</label>
                            <input type="text" class="form-control" id="street" name="address[street]" value="<%= manufacturer.address?.street %>">
                        </div>
                        <div class="col-md-3">
                            <label for="country" class="form-label">Country</label>
                            <select id="country" class="form-select" name="address[country]" data-current-country="<%= manufacturer.address?.country %>">
                                <option></option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="city" class="form-label">City</label>
                            <select id="city" class="form-select" name="address[city]" data-current-city="<%= manufacturer.address?.city %>">
                                <option></option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="zipcode" class="form-label">Zip</label>
                            <input type="text" class="form-control" id="zipcode" name="address[zipcode]" value="<%= manufacturer.address?.zipcode %>">
                        </div>
                    </div>
                    <div class="row offset-10 col-2 text-end">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" id="btn-send-form" class="btn btn-warning">Update</button>
                            </div>
                            <div class="col-6">
                                <button type="button" id="btn-clear-form" class="btn btn-primary">Clear</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <%- include("../shared/footer.ejs") %>
        <link rel="stylesheet" href="/select2/dist/css/select2.css">
        <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/jquery/dist/jquery.js"></script>
        <script src="/select2/dist/js/select2.full.min.js"></script>
        <script src="/manufacturers/js/edit.js"></script>
    </body>
</html>