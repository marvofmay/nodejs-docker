<div class="row">
    <div class="col-md-12 d-flex justify-content-between align-items-center">
        <h2><%= title %> | <%= action %></h2>
        <button class="btn btn-secondary btn-back">back</button>
    </div>
</div>
<hr />
<div class="info-manufacturer content" id="info-manufacturer-content">
    <div class="row">
        <div class="col-12">
            <div class="text-end">
                <a
                    id="btn-pdf-manufacturer"
                    class="btn-pdf-manufacturer"
                    href="/manufacturers/pdf/<%= manufacturer._id %>"
                    <% if (manufacturer.deletedAt !== null) { %> style="display: none;" <% } %>
                >
                    <i class="bi bi-file-pdf"></i>
                </a>
                <a
                    id="btn-edit-manufacturer"
                    class="btn-edit-manufacturer"
                    href="/manufacturers/edit/<%= manufacturer._id %>"
                    <% if (manufacturer.deletedAt !== null) { %> style="display: none;" <% } %>
                >
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a
                    id="btn-delete-manufacturer"
                    class="btn-delete btn-delete-manufacturer"
                    data-manufacturer-id="<%= manufacturer._id %>"
                    data-manufacturer-name="<%= manufacturer.name %>"
                    <% if (manufacturer.deletedAt !== null) { %> style="display: none;" <% } %>
                >
                    <i class="bi bi-trash3-fill"></i>
                </a>
                <a
                    id="btn-restore-manufacturer"
                    class="btn-restore btn-restore-manufacturer"
                    data-manufacturer-id="<%= manufacturer._id %>"
                    data-manufacturer-name="<%= manufacturer.name %>"
                    <% if (manufacturer.deletedAt === null) { %> style="display: none;" <% } %>
                >
                    <i class="bi bi-arrow-counterclockwise"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div id="manufacturer-content" class="content manufacturer-content" <% if (manufacturer.deletedAt !== null) { %> style="display: none;" <% } %>>
                <h2><%= manufacturer.name %></h2>
                <hr />
                <p>short name: </p><%= manufacturer.shortName || '---' %>
                <br />
                <p>parent: </p><%= manufacturer.parentManufacturer?.name || '---' %>
                <br />
                <p>nip: </p><%= manufacturer.nip %>
                <br />
                <p>regon: </p><%= manufacturer.regon || '---' %>
                <br />
                <p>email: </p><%= manufacturer.email || '---' %>
                <br />
                <p>address: </p><%= manufacturer.address?.street || '---' %>
                <br />
                <p>postcode: </p><%= manufacturer.address?.zipcode || '---' %>
                <br />
                <p>city: </p><%= manufacturer.address?.city || '---' %>
                <br />
                <p>country: </p><%= manufacturer.address?.country || '---' %>
                <br />
                <p>email: </p><%= manufacturer.regon || '---' %>
                <br />
                <p>www: </p><%= manufacturer.www || '---' %>
            </div>
        </div>
    </div>
</div>
