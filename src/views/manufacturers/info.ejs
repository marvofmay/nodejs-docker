<html lang="en">
    <%- include("../shared/header.ejs") %>
    <body>
        <%- include("../shared/navigation.ejs") %>
        <div class="info-manufacturer content">
            <div class="row">
                <div class="col-6">
                    <div class="content">
                        <div>
                            <h2><%= manufacturer.name %></h2>
                            <hr />
                            <p><%= manufacturer.shortName %></p>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="content">
                        <div>
                            <h2><%= manufacturer.name %></h2>
                            <hr />
                            <p><%= manufacturer.shortName %></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="text-end">
                        <a class="btn-edit-manufacturer" href="/manufacturers/edit/<%= manufacturer._id %>">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a class="btn-delete btn-delete-manufacturer" data-doc="<%= manufacturer._id %>">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <%- include("../shared/footer.ejs") %>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const btnDeleteManufacturers = document.querySelectorAll('a.btn-delete-manufacturer');
                btnDeleteManufacturers.forEach(btnDeleteManufacturer => {
                    btnDeleteManufacturer.addEventListener('click', (e) => {
                        const shouldDelete = confirm('Czy na pewno chcesz usunąć tego producenta?');
                        if (shouldDelete) {
                            const endpoint = `/manufacturers/${btnDeleteManufacturer.dataset.doc}`;
                            fetch(endpoint, {
                                method: 'DELETE',
                            })
                                .then(response => response.json())
                                .then(data => window.location.href = data.redirect)
                                .catch(err => console.log(err));
                        } else {
                            e.preventDefault();
                        }
                    });
                });
            });
        </script>
    </body>
</html>